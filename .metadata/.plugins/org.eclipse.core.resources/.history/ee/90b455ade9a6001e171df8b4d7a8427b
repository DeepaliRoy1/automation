package qsp;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class Xpath {
	static {
		System.setProperty("webdriver.chrome.driver", "./driver/chromedriver.exe");
	}
	public static void main(String[] args) throws InterruptedException {
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.navigate().to("https://www.youtube.com/");
		driver.findElement(By.cssSelector("//input[@type='text']")).sendKeys("moye moye");
		driver.findElement(By.className("//button[@class='style-scope ytd-searchbox']")).click();
		driver.findElement(By.className("//a[@title='#1 Trending Song - Teya Dora - DÅ¾anum (Juzni Vetar - Na Granici) by Song Music 14,327,404 views 2 months ago 2 minutes, 35 seconds']]")).click();
		driver.findElement(By.className("//button[@title='Full screen']']")).click();

	Thread.sleep(5000);
	driver.close();


}
}
